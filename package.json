{
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.1",
    "typescript": "^5.0.4"
  },
  "scripts": {
    "server": "cd server && npm start",
    "client": "cd client && npm i && npm dev",
    "start": "npm run server",
    "build": "tsc && cd client && npm i && npm run build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js.jsx.ts.tsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
